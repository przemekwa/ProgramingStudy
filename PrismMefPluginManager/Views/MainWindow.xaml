<UserControl x:Class="PrismMefPluginManager.Views.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="302.28" d:DesignWidth="613.518">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Margin="2" Text="{Binding Imie, UpdateSourceTrigger=PropertyChanged}" ></TextBlock>
            <TextBlock Margin="2" Text="{Binding Nazwisko}" ></TextBlock>
            <TextBlock Margin="2" Text="jest zwycięzcą po raz" ></TextBlock>
            <TextBlock Margin="2" Text="{Binding IleRazy}" ></TextBlock>
        </StackPanel>

        <StackPanel  Grid.Row="1">
            <Button  Content="Graj" Command="{Binding GrajCommand}"  />
        </StackPanel>

    </Grid>
</UserControl>

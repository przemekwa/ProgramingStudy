<Window KeyUp="MainWindow_OnKeyUp" x:Class="ColorPreview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPreview"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
     
        <StackPanel>
            <Rectangle Name="Rectangle1" Height="200" Fill="Black"/>
            <Slider Name="SliderR" Maximum="255"  ValueChanged="RangeBase_OnValueChanged"  />
            <Slider Name="SliderG" Maximum="255"  ValueChanged="RangeBase_OnValueChanged"/>
            <Slider Name="SliderB" Maximum="255" ValueChanged="RangeBase_OnValueChanged"/>
        </StackPanel>
        
    </Grid>
</Window>
